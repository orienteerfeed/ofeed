  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Dev: Client + Server",
      "configurations": ["Attach: Server", "Launch: Client (Chrome)"],
      "preLaunchTask": "install"
    }
  ],
  "configurations": [
    {
      "name": "Attach: Server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "timeout": 30000,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "preLaunchTask": "server:start:dev"
    },
    {
      "name": "Launch: Client (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/client",
      "preLaunchTask": "client:start"
    },
    {
      "name": "Launch: Server (build output)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/build/index.js",
      "cwd": "${workspaceFolder}/server",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "env": {
        "NODE_ENV": "production"
      }
    }
  ]
}
