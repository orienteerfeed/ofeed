{
  "name": "ofeed-server",
  "version": "0.0.0",
  "description": "Orienteering Cloud Data Hub",
  "private": true,
  "type": "module",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development PORT=3001 tsx watch src/index.ts",
    "dev": "cross-env NODE_ENV=development PORT=3001 tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "type-check": "tsc --noEmit",
    "start": "pnpm exec tsx src/index.ts",
    "start:prod": "pnpm exec prisma migrate deploy && pnpm exec prisma generate && pnpm run db:seed && pnpm exec tsx src/index.ts",
    "format": "prettier --write \"src/**/*.ts\" README.md",
    "format:check": "prettier --check \"src/**/*.ts\" README.md",
    "prettier": "prettier --write \"src/**/*.ts\" README.md",
    "pretest": "pnpm run db:generate",
    "pretest:watch": "pnpm run db:generate",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --max-warnings=0 --no-inline-config",
    "lint:fix": "eslint src --fix",
    "db:generate": "pnpm exec prisma generate",
    "db:migrate": "pnpm exec prisma migrate dev",
    "db:migrate:deploy": "pnpm exec prisma migrate deploy",
    "db:seed": "pnpm exec tsx prisma/seed.ts"
  },
  "author": "Martin KÅ™ivda",
  "license": "GPL-3.0",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.992.0",
    "@graphql-tools/schema": "^9.0.19",
    "@hono/node-server": "^1.19.9",
    "@hono/zod-openapi": "^1.2.2",
    "@node-oauth/oauth2-server": "^5.2.1",
    "@prisma/adapter-mariadb": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@repo/shared": "workspace:*",
    "@scalar/hono-api-reference": "^0.9.41",
    "@sendgrid/mail": "^8.1.6",
    "@xmldom/xmldom": "^0.8.11",
    "argon2": "^0.44.0",
    "csv-parse": "^5.6.0",
    "ejs": "^3.1.10",
    "graphql": "^16.12.0",
    "graphql-constraint-directive": "^5.4.3",
    "graphql-subscriptions": "^3.0.0",
    "graphql-yoga": "^5.16.2",
    "graphql-ws": "^6.0.7",
    "hono": "^4.11.10",
    "hono-rate-limiter": "^0.5.3",
    "jsonwebtoken": "^9.0.3",
    "lodash.merge": "^4.6.2",
    "pino": "^10.3.0",
    "prom-client": "^15.1.3",
    "rotating-file-stream": "^3.2.8",
    "sharp": "^0.34.5",
    "ws": "^8.19.0",
    "xml2js": "^0.6.2",
    "xmllint-wasm": "^5.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.13",
    "@types/ws": "^8.18.1",
    "@types/xml2js": "^0.4.14",
    "eslint": "^9.39.2",
    "prettier": "^2.8.8",
    "prisma": "^7.4.0",
    "tsx": "^4.21.0",
    "typescript-eslint": "^8.55.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
